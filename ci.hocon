graal-vm-release: {
  downloads: {
    GRAALVM_DIR: {
      name: graalvm-release,
      version: "0.17",
      platformspecific: true
    }
  }
  environment: {
    GRAALVM_BIN: "$GRAALVM_DIR/bin/java"
    HOST_VM: server,
    HOST_VM_CONFIG: graal-vm
  }
}

builds = [
  ${graal-vm-release} {
    name: "weather_predictor_gate"
    capabilities : [linux, amd64],
    targets : [gate],
    run : [
      ["./weather_predictor/run"],
    ],
  },
]
